<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Home street number</th>
      <th>Home street name</th>
      <th>Home suburb</th>
      <th>Home city</th>
      <th>Home state</th>
      <th>Home post code</th>
      <th>Home country</th>
      <th>Ship street number</th>
      <th>Ship street name</th>
      <th>Ship suburb</th>
      <th>Ship city</th>
      <th>Ship state</th>
      <th>Ship post code</th>
      <th>Ship country</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.home_street_number %></td>
        <td><%= profile.home_street_name %></td>
        <td><%= profile.home_suburb %></td>
        <td><%= profile.home_city %></td>
        <td><%= profile.home_state %></td>
        <td><%= profile.home_post_code %></td>
        <td><%= profile.home_country %></td>
        <td><%= profile.ship_street_number %></td>
        <td><%= profile.ship_street_name %></td>
        <td><%= profile.ship_suburb %></td>
        <td><%= profile.ship_city %></td>
        <td><%= profile.ship_state %></td>
        <td><%= profile.ship_post_code %></td>
        <td><%= profile.ship_country %></td>
        <td><%= profile.user %></td>
        <td><%= link_to 'Show', profile %></td>
        <% if policy(profile).update? %>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

