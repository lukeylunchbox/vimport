  <div class="field">
    <%= form.label "Street Name" %>
    <%= form.text_field :home_street_name, id: :profile_home_street_name %>
  </div>

  <div class="field">
    <%= form.label "Suburb" %>
    <%= form.text_field :home_suburb, id: :profile_home_suburb %>
  </div>

  <div class="field">
    <%= form.label "City" %>
    <%= form.text_field :home_city, id: :profile_home_city %>
  </div>

  <div class="field">
    <%= form.label "State" %>
    <%= form.text_field :home_state, id: :profile_home_state %>
  </div>

  <div class="field">
    <%= form.label "Post Code" %>
    <%= form.text_field :home_post_code, id: :profile_home_post_code %>
  </div>

  <div class="field">
    <%= form.label "Country" %>
